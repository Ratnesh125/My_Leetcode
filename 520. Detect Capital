class Solution {
public:

    bool detectCapitalUse(string nums) {
        int n=nums.size();
        if(nums[0]>='A' && nums[0]<='Z' && nums[1]>='a' && nums[0]<='z' ){
            for(int i=2;i<n;i++){
                if(nums[i]<'a' || nums[i]>'z'){
                    return 0;
                }
            }
        } 
    else if(nums[0]>='A' && nums[0]<='Z' ){
            for(int i=1;i<n;i++){
                if(nums[i]<'A' || nums[i]>'Z'){
                    return 0;
                }
            }
        } 
    
    else if(nums[0]>='a' && nums[0]<='z' ){
            for(int i=1;i<n;i++){
                if(nums[i]<'a' || nums[i]>'z'){
                    return 0;
                }
            }
        } 
        return 1;
    }
};
